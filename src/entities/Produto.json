{
  "name": "Produto",
  "type": "object",
  "properties": {
    "id_tray": {
      "type": "string",
      "description": "ID do produto na Tray"
    },
    "id_bling": {
      "type": "string",
      "description": "ID do produto no Bling"
    },
    "referencia": {
      "type": "string",
      "description": "Código de referência do produto"
    },
    "nome": {
      "type": "string",
      "description": "Nome do produto"
    },
    "marca": {
      "type": "string",
      "description": "Marca do produto"
    },
    "categoria": {
      "type": "string",
      "description": "Categoria do produto"
    },
    "fornecedor": {
      "type": "string",
      "description": "Fornecedor do produto"
    },
    "descricao": {
      "type": "string",
      "description": "Descrição detalhada"
    },
    "preco_custo": {
      "type": "number",
      "description": "Preço de custo"
    },
    "preco_venda": {
      "type": "number",
      "description": "Preço de venda"
    },
    "estoque": {
      "type": "number",
      "description": "Quantidade em estoque"
    },
    "peso": {
      "type": "number",
      "description": "Peso em kg"
    },
    "altura": {
      "type": "number",
      "description": "Altura em cm"
    },
    "largura": {
      "type": "number",
      "description": "Largura em cm"
    },
    "comprimento": {
      "type": "number",
      "description": "Comprimento em cm"
    },
    "status": {
      "type": "string",
      "enum": [
        "ativo",
        "inativo"
      ],
      "default": "ativo",
      "description": "Status do produto"
    },
    "imagem_url": {
      "type": "string",
      "description": "URL da imagem do produto"
    },
    "marketplace": {
      "type": "string",
      "enum": [
        "tray",
        "bling",
        "mercado_livre",
        "shopee",
        "magalu",
        "todos"
      ],
      "description": "Marketplace principal"
    }
  },
  "required": [
    "nome",
    "referencia"
  ]
}
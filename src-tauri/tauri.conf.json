{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DLS Ecommerce",
  "version": "0.1.0",
  "identifier": "com.dlsecommerce",

  "build": {
    "frontendDist": "../out",
    "beforeDevCommand": "next dev -p 3000",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "withGlobalTauri": true,

    "windows": [
      {
        "label": "main",
        "title": "DLS Ecommerce",
        "url": "splash.html",
        "width": 600,
        "height": 400,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "visible": true,
        "backgroundColor": "#090909"
      }
    ],

    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "copyright": "Â© 2025 DLS Multimarcas. Todos os direitos reservados.",
    "shortDescription": "Aplicativo Desktop Oficial do DLS Ecommerce",
    "longDescription": "Aplicativo oficial do DLS Ecommerce para desktop.",

    "windows": {
      "wix": {
        "language": "pt-BR"
      },
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine"
      }
    },

    "linux": {},
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "signingIdentity": null
    },

    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
